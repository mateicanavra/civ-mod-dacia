<?xml version="1.0" encoding="utf-8"?>
<Mod id="com.dacia.civilization">
	<Properties>
		<Name>Dacia Civilization</Name>
		<Teaser>Adds the Dacia civilization to the game.</Teaser>
		<Description>This mod adds the Dacia civilization to the game, including two unique leaders, their unique abilities, units, and buildings. Experience the ancient kingdom of Dacia with its rich history and distinctive cultural elements.</Description>
		<Authors>Mod Author</Authors>
		<SpecialThanks>Civilization VI Modding Community</SpecialThanks>
		<AffectsSavedGames>true</AffectsSavedGames>
		<SupportsSinglePlayer>true</SupportsSinglePlayer>
		<SupportsMultiplayer>true</SupportsMultiplayer>
		<SupportsHotSeat>true</SupportsHotSeat>
		<CompatibleVersions>2.0</CompatibleVersions>
		<Category>Civilizations</Category>
		<Version>1.0.0</Version>
	</Properties>
	<FrontEndActions>
		<UpdateDatabase id="DaciaConfig">
			<File>Dacia/Core/Civilization_Dacia.xml</File>
		</UpdateDatabase>
		<UpdateText id="DaciaText">
			<File>Dacia/Text/en_US/Civilization_Dacia_Text.xml</File>
		</UpdateText>
		<UpdateIcons id="DaciaIcons">
			<File>Dacia/Core/Civilization_Dacia_Icons.xml</File>
		</UpdateIcons>
		<UpdateArt id="DaciaArt">
			<File>Dacia.dep</File>
		</UpdateArt>
	</FrontEndActions>
	<InGameActions>
		<UpdateDatabase id="DaciaGameplay">
			<File>Dacia/Core/Civilization_Dacia.xml</File>
			<File>Dacia/Leaders/Dacia_Leaders.xml</File>
		</UpdateDatabase>
		<UpdateText id="DaciaInGameText">
			<File>Dacia/Text/en_US/Civilization_Dacia_Text.xml</File>
		</UpdateText>
		<UpdateIcons id="DaciaInGameIcons">
			<File>Dacia/Core/Civilization_Dacia_Icons.xml</File>
		</UpdateIcons>
		<UpdateArt id="DaciaInGameArt">
			<File>Dacia.dep</File>
		</UpdateArt>
	</InGameActions>
	<Files>
		<File>Dacia/Core/Civilization_Dacia.xml</File>
		<File>Dacia/Core/Civilization_Dacia_Icons.xml</File>
		<File>Dacia/Leaders/Dacia_Leaders.xml</File>
		<File>Dacia/Text/en_US/Civilization_Dacia_Text.xml</File>
		<File>Dacia.dep</File>
	</Files>
</Mod>

